<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>


<div class="sign_up_container">
  <h2> Jetsetter Sign Up </h2>
  <%= form_for :user do |f|%>
      <p> <%= f.label :username %>
      <%= f.text_field :username %> </p>

      <p><%= f.label :email %>
      <%= f.text_field :email %></p>

      <p><%= f.label :password %>
      <%= f.text_field :password %></p>

      <p><%= f.label :password_confirmation %>
      <%= f.text_field :password_confirmation %></p>

      <%= f.submit "Sign Up" %>

  <%end%>

  <br>

  <h3> -OR- </h3>

  <%= link_to('Sign up with Google', '/auth/google_oauth2')%>
</div>