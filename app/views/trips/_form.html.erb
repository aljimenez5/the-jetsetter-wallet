            <%= city_form.label :name, "City " %>
            <%= city_form.text_field :name %>
        <%end%>
        <br>
        <%= f.fields_for :activities do |activities_form| %>
            <div class="activity_container">
            <%= activities_form.label :name, "Activity Name " %>
            <%= activities_form.text_field :name %>
            <br>
            <%= activities_form.label :description, "Activity Description " %>
            <br>
            <%= activities_form.text_area :description, size: "80x10"%>
            </div>

        <%end%>

        <br>
        <%= f.submit "Submit Trip", class: "submit_button" %>

