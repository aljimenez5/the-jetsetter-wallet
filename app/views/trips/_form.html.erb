<%= form_for :trip do |f|%>

    <%=f.label "Trip Name" %>
    <%=f.text_field :name %>
    <br>
    <%= f.hidden_field :user_id %>
    <br>
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
    <br>


    <%= f.fields_for :countries do |country| %>
        <%= country.label :name %>
        <%= country.collection_select(:trip, :country_id, Country.all, :id) %>
    <%end%>


    <%= f.submit "Add Trip" %>
<%end%>
